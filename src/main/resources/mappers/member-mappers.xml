<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="olzlrlo.springcrud.mapper.UserMapper">
    <select id="select" parameterType="String" resultType="userDto">
        select name, id
        from member
        where id = #{id}
    </select>

    <select id="list" parameterType="String" resultType="userDto">
        select name, id
        from member
    </select>

    <insert id="insert">
        insert into member (name)
        values (#{value})
    </insert>

    <delete id="delete">
        delete from member
        where name = #{name}
    </delete>

    <update id="update" parameterType="olzlrlo.springcrud.dto.UserDto">
        update member
        set name = #{name}
        where id = #{id}
    </update>
</mapper>